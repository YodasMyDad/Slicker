{
  "name": "slicker",
  "version": "1.9.0",
  "description": "Slicker carousel rewritten from Slick in vanilla TypeScript - no jQuery dependency",
  "main": "dist/slicker.js",
  "module": "dist/slicker.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "slick"
  ],
  "style": "dist/slicker.css",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:types && npm run build:css",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:css": "sass src/slicker.scss dist/slicker.css --style compressed --no-source-map",
    "preview": "vite preview"
  },
  "keywords": [
    "slicker",
    "carousel",
    "slider",
    "vanilla",
    "typescript",
    "no-jquery"
  ],
  "author": "Ken Wheeler (original), Vanilla rewrite",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.2.0",
    "sass": "^1.94.2",
    "terser": "^5.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/kenwheeler/slick"
  }
}
